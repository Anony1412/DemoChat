<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="demo_chat.anony1412.itptit.demochat.StartActivity">

    <TextView
        android:id="@+id/txt_chaomungbandenvoidemochat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Welcome to DemoChat"
        android:textColor="@color/colorWhite"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/btn_start_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt_chaomungbandenvoidemochat"
        android:layout_marginTop="32dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="@color/colorRed"
        android:text="Already have account"
        android:textColor="@color/colorWhite"/>

    <Button
        android:id="@+id/btn_start_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_start_login"
        android:layout_marginTop="16dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="@color/colorWhite"
        android:textColor="@color/colorPrimaryDark"
        android:text="Create a new account?"/>
</RelativeLayout>
